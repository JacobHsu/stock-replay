{
    "name": "StockReplay Backend",
    "image": "mcr.microsoft.com/devcontainers/python:3.12",
    "postCreateCommand": "pip install uv && cd backend && uv sync",
    "postStartCommand": "sleep 3 && cd /workspaces/stock-replay/backend && nohup uv run uvicorn app.main:app --host 0.0.0.0 --port 8888 > /tmp/backend.log 2>&1 &",
    "forwardPorts": [
        8888
    ],
    "portsAttributes": {
        "8888": {
            "label": "Backend API",
            "onAutoForward": "openBrowser"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "charliermarsh.ruff"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "editor.formatOnSave": true
            }
        }
    }
}